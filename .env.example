# OpenClaw Docker Configuration
# Copy this file to .env and fill in your values

# Home volume
OPENCLAW_HOME_VOLUME=/path/to/openclaw/home

# State directories
OPENCLAW_CONFIG_DIR=/path/to/openclaw/config
OPENCLAW_WORKSPACE_DIR=/path/to/openclaw/workspace

# Additional directories
OPENCLAW_SRC_DIR=/path/to/openclaw/repo

# Docker image
OPENCLAW_IMAGE=openclaw:local

# Playwright
PLAYWRIGHT_BROWSERS_PATH="/home/node/.cache/ms-playwright"

# GitHub Copilot
GITHUB_TOKEN=

# Gateway token (for auth + health checks)
OPENCLAW_GATEWAY_TOKEN=
